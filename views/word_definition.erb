<h2>Your word is:</h2>
<% @list_defined.each do |item| %>
  <%= item.word %> <br>
<% end %>

<h2>Definition of you word!</h2>

<% @list_defined.each do |item| %>
  <%= item.definition %> <br>
<% end %>

<h4>Add an item to the list:</h4>
<br>
<form action="/" method="post">
  <div class="form-group">
    <label for="word">Word:</label>
    <input id="word" name="word" class="form-control" type="text">
    <label for="definition">Definition:</label>
    <input id="definition" name="definition" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add!</button>
</form>
