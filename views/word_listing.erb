<div class="container">
  <div class="jumbotron">
    <h2>Welcome to the Word Definer</h2><br>
  </div>
</div>

<div class="container">
  <div class="jumbotron jumbotron-2">
    <h4>Add a word you wish to define to the list:</h4>
    <br>
    <form action="/wordlist" method="post">
      <div class="form-group">
        <label for="word">Word:</label>
        <input type="text" name="word" required pattern=".*\S+.*" title="This field is required"><br>
        <label for="definition">Definition:</label>
        <input type="text" name="definition" required pattern=".*\S+.*" title="This field is required"><br      </div><br>
      <button type="submit" class="btn-alert">Add!</button>
    </form><br>
    <form class="form-group" action="/" method="get">
      <button type="submit" name="button">Clear list</button>
    </form>


    <div class="output-form-box">
      <% @word.each do |item| %>
        <p><a href="/word/<%= item.id %>"><%= item.word %></a></p>
      <% end %>
    </div>
  </div>
</div>
